    {
        "label": "error if URN not valid",
        "method": "POST",
        "path": "/mr/contact/resolve",
        "body": {
            "org_id": 1,
            "channel_id": 10000,
            "urn": "tel:*"
        },
        "status": 400,
        "response": {
            "error": "URN failed validation: scheme or path cannot be empty"
        },
